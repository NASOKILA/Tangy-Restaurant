@model TangyRestaurant.Models.SubCategoryViewModels.SubCategoryAndCategoryViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<h2>Sub Category Delete</h2>

<hr />
<br />

<div class="form-border">
    <form method="post" asp-action="Delete">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="@Model.subCategory.Id" />

        <fieldset disabled>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="@Model.subCategory.Name" class="custom-label"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="@Model.subCategory.Name" type="text" class="form-control" />
                </div>
                <span asp-validation-for="@Model.subCategory.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="@Model.subCategory.category.Name" class="custom-label">Category Name</label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="@Model.subCategory.category.Name" type="text" class="form-control" />
                </div>
                <span asp-validation-for="@Model.subCategory.category.Name" class="text-danger"></span>
            </div>
        </div>  

        </fieldset>

        <br />

        <div class="form-group">
            <a asp-action="Index" class="btn btn-primary"><i class="fas fa-backward"></i> &nbsp; Back</a>
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> &nbsp; Delete</button>
        </div>

    </form>

</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}