@model TangyRestaurant.Models.SubCategoryViewModels.SubCategoryAndCategoryViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)

<h2>Edit Sub Category</h2>
<hr />
<br />



<div class="form-border row">
    <div class="col-sm-8">
        <form method="post" asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="@Model.subCategory.Id" />

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-4">
                        <label asp-for="@Model.subCategory.Name" class="custom-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="@Model.subCategory.Name" type="text" class="form-control" />
                    </div>
                    <span asp-validation-for="@Model.subCategory.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-4">
                        <label asp-for="@Model.subCategory.Name" class="custom-label">Category Name</label>
                    </div>
                    <div class="col-sm-8">
                        <select class="form-control" asp-for="@Model.subCategory.category.Name">
                            @foreach (var category in Model.CategoriesList)
                            {
                                <option>@category.Name</option>
                            }
                        </select>

                        @*<input asp-for="@Model.DisplayOrder" type="text" class="form-control" />*@
                    </div>
                    <span asp-validation-for="@Model.subCategory.category.Name" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary"><i class="fas fa-backward"></i> &nbsp; Back</a>
                <button type="submit" class="btn btn-warning"><i class="fas fa-sync-alt"></i> &nbsp; Update</button>
            </div>

        </form>
    </div>

    <div class="col-4">
        @if (Model.SubCategoriesNamesList.Count > 1)
        {
            <p>Existiong Subctegories : </p>
            <ul class="list-group">
                @foreach (string subcatName in Model.SubCategoriesNamesList)
                {
                    <li class="list-group-item">@subcatName</li>
                }
            </ul>
        }
        else
        {
            <p>No sub categories in DB. . .</p>
        }

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

