@model TangyRestaurant.Models.SubCategoryViewModels.SubCategoryAndCategoryViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)

<h2>Sub Category Create</h2>
<hr />
<br />

<div class="form-border row">
    <div class="col-sm-8">

        <form method="post" asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-3">
                        <label asp-for="subCategory.Name" class="custom-label"></label>
                    </div>
                    <div class="col-sm-5">
                        <input asp-for="subCategory.Name" type="text" class="form-control" />
                    </div>
                    <span asp-validation-for="subCategory.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-3">
                        <label asp-for="subCategory.category.Name" class="custom-label"></label>
                    </div>
                    <div class="col-sm-5">
                        <select class="form-control" asp-for="subCategory.category.Name">
                            @foreach (var category in Model.CategoriesList)
                            {
                                <option>@category.Name</option>
                            }
                        </select>
                        @*<input asp-for="subCategory.category.Name" type="text" class="form-control" />*@
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="row">
                    <div class="col-sm-3">
                        <label asp-for="isNew" class="custom-label">Is New</label>
                    </div>
                    <div class="col-sm-5">
                        <input asp-for="isNew" class="form-control" />
                    </div>
                    <span asp-validation-for="isNew" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="form-group row">
                <div class="col-sm-3">
                </div>
                <div class="col-sm-5">
                    <button type="submit" class="btn btn-success"><i class="fas fa-plus"></i> &nbsp; Create</button>
                    <a asp-action="Index" class="btn btn-primary"><i class="fas fa-backward"></i> &nbsp; Back</a>
                </div>
            </div>
        </form>

    </div>
    <div class="col-4">
        @if (Model.SubCategoriesNamesList.Count > 0)
        {
            <p>Existiong Subctegories : </p>
            <ul class="list-group">
                @foreach (string subcatName in Model.SubCategoriesNamesList)
                {
                    <li class="list-group-item">@subcatName</li>
                }
            </ul>
        }
        else
        {
            <p>No sub categories in DB. . .</p>
        }

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
