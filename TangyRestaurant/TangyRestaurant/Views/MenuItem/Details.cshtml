@model TangyRestaurant.Models.MenuItem
@{
    ViewData["Title"] = "Details";
}

<h2>Menu Item Details</h2>
<hr />
<br />


    <div class="form-border row">

        <input type="hidden" asp-for="Id" />

        <div class="col-sm-8">
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="Name" class="custom-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="Name" disabled class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="Description" class="custom-label"></label>
                </div>
                <div class="col-sm-8">
                    <textarea asp-for="Description" disabled class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="Price" class="custom-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="Price" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="Spicyness" class="custom-label"></label>
                </div>
                <div class="col-sm-8">
                    <select asp-for="Spicyness" disabled asp-items="Html.GetEnumSelectList<MenuItem.Espicy>()" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="Category" class="custom-label"></label>
                </div>
                <div class="col-sm-8">
                    <select asp-for="CategoryId" disabled onchange="AdjustSubcategories()" id="CategoryId" class="form-control">
                        <option>@Model.Category.Name </option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="SubCategory" class="custom-label">Sub Category</label>
                </div>
                <div class="col-sm-8">
                    <select asp-for="SubCategoryId" disabled id="SubcategoryId" class="form-control">
                        <option>@Model.SubCategory.Name</option>
                    </select>
                    <!--They have to be selected based on what Category we have selected, we will do that with javascript-->
                </div>
            </div>
        </div>

        <div class="col-sm-1"></div>

        <div class="col-sm-3">
            <img src="@Model.Image" width="100%" style="border: 1px solid #bbb9b9; border-radius: 5px;" />
        </div>

        <div class="form-group">
            <a asp-controller="MenuItem" asp-action="Index" class="btn btn-primary">Back <i class="fas fa-backward"></i></a>
            <a asp-controller="MenuItem" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit <i class="fas fa-sync-alt"></i></a>
        </div>
    </div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


