@model IEnumerable<MenuItem>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@


@if (Model.Count() > 0)
{

    foreach (var item in Model)
    {

        <div class="border border-info rounded col-12" style="margin-top:10px; margin-bottom:10px;padding:10px;">
            <div class="row">
                <div class="col-sm-9">
                    <div class="row">
                        <div class="col-sm-10">
                            <label class="text-primary" style="font-size:21px;color:maroon;">@item.Name</label>
                            <br />
                            <label class="badge badge-primary">@item.SubCategory.Name</label>
                            @if (item.Spicyness == "1")
                            {
                                <label class="badge badge-info">@MenuItem.Espicy.Spicy</label>
                            }
                            @if (item.Spicyness == "2")
                            {
                                <label class="badge badge-info">Very Spicy</label>
                            }
                        </div>
                        <div class="col-sm-2 text-right">
                            <h4 class="text-danger">$@item.Price</h4>
                        </div>
                    </div>

                    <div class="col-sm-12 text-justify">
                        <p>@item.Description</p>
                        <br/>
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success"><i class="fas fa-info"></i> Details</a>
                    </div>   
                    </div>
                    <div class="col-sm-3">
                        <img src="@item.Image" width="90%" style="border: 1px solid #bbb9b9; border-radius:5px;"/>
                    </div>
                </div>
        </div>

    }
}

