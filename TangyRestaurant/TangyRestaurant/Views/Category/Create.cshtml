@model TangyRestaurant.Models.Category
@{
    ViewData["Title"] = "Create";
}



<h2>Category Create</h2>
<hr />
<br />


<div class="form-border">
    <form method="post" asp-action="Create">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="@Model.Name" class="custom-label"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="@Model.Name" type="text" class="form-control" />
                </div>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="@Model.DisplayOrder" class="custom-label">Display Order</label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="@Model.DisplayOrder" type="text" class="form-control" />
                </div>
                <span asp-validation-for="@Model.DisplayOrder" class="text-danger"></span>
            </div>
        </div>

    <br />

    <div class="form-group">
        <a asp-action="Index" class="btn btn-primary"><i class="fas fa-backward"></i> &nbsp; Back</a>
        <button type="submit" class="btn btn-success"><i class="fas fa-plus"></i> &nbsp; Create</button>
    </div>

    </form>

</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}