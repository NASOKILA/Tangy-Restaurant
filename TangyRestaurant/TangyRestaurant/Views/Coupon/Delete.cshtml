@model TangyRestaurant.Models.Coupon
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>
<hr />
<br />

<div class="form-border">
    <form method="post" asp-action="Delete" enctype="multipart/form-data">

        <div class="col-sm-12">
            @{
                string image = string.Empty;

                if (Model.Picture != null)
                {
                    var base64 = Convert.ToBase64String(Model.Picture);
                    image = string.Format("data:image/jpg;base64, {0}", base64);
                }
            }

            @if (Model.Picture != null)
            {
                <img src="@image" height="55px" width="100%" />
                <br />
                <br />
            }

        </div>

        <fieldset disabled>
            <div class="col-sm-8">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="@Model.Name" class="custom-label"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="@Model.Name" type="text" class="form-control" />
                        </div>
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="@Model.CouponType" class="custom-label">Coupon Type</label>
                        </div>
                        <div class="col-sm-8">
                            <select asp-for="@Model.CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" type="text" class="form-control"></select>
                        </div>
                        <span asp-validation-for="@Model.CouponType" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="@Model.Discount" class="custom-label"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="@Model.Discount" class="form-control" />
                        </div>
                        <span asp-validation-for="@Model.Discount" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="@Model.MinAmount" class="custom-label">Min Amount</label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="@Model.MinAmount" class="form-control" />
                        </div>
                        <span asp-validation-for="@Model.MinAmount" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="@Model.Picture" class="custom-label"></label>
                        </div>
                        <div class="col-sm-8">
                            <input type="file" name="files" multiple class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="@Model.IsActive" class="custom-label">Is Active</label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="@Model.IsActive" class="form-control" />
                        </div>
                        <span asp-validation-for="@Model.IsActive" class="text-danger"></span>
                    </div>
                </div>

            </div>
        </fieldset>

        <br />

        <div class="col-sm-12">

            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary"><i class="fas fa-backward"></i> &nbsp; Back</a>
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> &nbsp; Delete</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}