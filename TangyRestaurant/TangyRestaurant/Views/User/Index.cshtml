@model List<TangyRestaurant.Models.ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<h2>Manage Users</h2>

<hr />
<br />

<div class="form-border">

    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (ApplicationUser user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id"><i class="fas fa-edit"></i></a>
                        @if (user.LockoutEnd == null)
                        {
                            <a class="btn btn-danger" asp-controller="User" asp-action="Lock" asp-route-id="@user.Id"><i class="fas fa-lock"></i></a>
                        }
                        else
                        {
                            <a class="btn btn-success" asp-controller="User" asp-action="Unlock" asp-route-id="@user.Id"><i class="fas fa-unlock"></i></a>
                        }
                    </td>
                </tr>
            }

            @if (Model.Count < 1) { 

             <tr>
                 <td>No records to display. . . </td>
             </tr>
            }

        </tbody>
    </table>

</div>



